{
    "manifest_version": 3,
    "name": "Parker",
    "version": "1.0",
    "description": "Parks a tab without loosing it's info",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_icon": {
            "48": "icons/icon48.png"
        }
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "parkedTab.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
